<IfModule mod_rewrite.c>
	RewriteEngine On

	# General declarations for the SEO.
	RewriteRule ^board([0-9]+)/.*?/?$ index.php?board=$1 [L,QSA]
	RewriteRule ^cat([0-9]+)/.*?/?$ index.php?cat=$1 [L,QSA]
	RewriteRule ^thread([0-9]+)/.*?/?$ index.php?thread=$1 [L,QSA]
	RewriteRule ^newthread([0-9]+)/?$ index.php?action=newthread&bid=$1 [L,QSA]
	RewriteRule ^reply([0-9]+)/?$ index.php?action=reply&tid=$1 [L,QSA]
	RewriteRule ^viewprofile/.*?/?$ index.php?user=$1 [L,QSA]
	RewriteRule ^(home|help|search|usercp|members|logout|login|signin|register|join|signup|upgrade)/?$ index.php?action=$1 [L,QSA]
	
	# OLD RULES THAT NEED TO BE UPDATED
	# RewriteRule ^(reply|print|newthread).html?(.+?)$ index.php?action=$1&$2 [L,QSA]
</IfModule>